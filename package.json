    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-plugin-css-modules": "^5.1.0",
    "vite": "^6.2.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1"
  },
  "overrides": {
    "glob": "^9.0.0"
  },
  "lint-staged": {
    "*.ts*": [
      "prettier --write",
      "eslint --fix"
